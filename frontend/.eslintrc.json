{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": ["plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {},
  "settings": {
    "import/resolver": {
      "alias": {
        "extensions": [".ts", ".tsx", ".module.sass", ".json"],
        "map": [
          ["pages", "./src/pages"],
          ["routes", "./src/routes"],
          ["components", "./src/components"]
        ]
      }
    }
  }
}
